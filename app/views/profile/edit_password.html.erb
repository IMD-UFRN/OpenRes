

<h1>Editando minha senha</h1>

<%= simple_form_for(@user, url: profile_edit_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Nova Senha", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirme sua Nova Senha", :required => true %>
  </div>

  <%= f.button :submit, "OK", class:"btn btn-success" %>
<% end %>

<%= render 'shared/back'%>
