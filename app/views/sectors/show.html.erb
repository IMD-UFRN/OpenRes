<h1>Detalhes do Setor</h1>
<%= link_to 'Editar Informações deste Setor', edit_sector_path(@sector), class:"btn-small btn-normal"%> 


<hr>


<dl>
  <dt>Nome:</dt> <dd><%= @sector.name %></dd>
  <dt>Descrição:</dt> <dd><%= @sector.description %></dd>
</dl>

<hr>

<h2>Salas deste Setor</h2>

<table class="table table-striped table-bordered table-hover places_table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Tipo de Sala</th>
      <th>Setor</th>
      <th>Capacidade</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>

  <% @sector.places.each do |place| %>
    <%= render place %>
  <%end%>

  </tbody>
</table>


<%= render 'shared/back'%>
