<div class = "well login_form">

  <%= image_tag "logo.png", size: "120x120" %>

  <h4 class= "centered_text">Gerenciador de Espaço Físico</h4>

  <h2>Esqueceu sua senha?</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true, label: "Informe seu e-mail abaixo" %>

      <%= f.button :submit, "Enviar instruções de recuperação de senha", class: "btn btn-success" %>
    </div>
  <% end %>



</div>
