<%= simple_form_for(:justification, url: (request.original_url.include?("reject") ? reservation_reject_path : reservation_suspend_path)) do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Escreva abaixo o motivo</h3>
  </div>
  <div class="modal-body">
    <%= f.input :reason, as: :text %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <%= f.submit (request.original_url.include?("reject") ? "Rejeitar" : "Suspender"), class: "btn btn-primary" %>
  </div>

<% end %>