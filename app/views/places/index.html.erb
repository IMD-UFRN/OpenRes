<h1>Listando Salas</h1>

 <% @sectors.each do |sector| %>

   <table class="table table-striped table-bordered table-hover places_table">
    <thead>
      <tr>  
        <th class ="table-title" colspan="5">
          Setor: <%= link_to sector.name, sector %>
        </th>
      </tr>
      <tr>
        <th>Código</th>
        <th>Nome</th>
        <th>Tipo de Sala</th>
        <th>Capacidade</th>
        <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% sector.places.each do |place| %>
        <tr>
          <td><%= link_to place.code, place %></td>
          <td class= "fix-colum"><%= place.name %></td>
          <td><%= link_to place.room_type.name, place.room_type %></td>
          <td><%= place.capacity %></td>
          <td>
            <%= link_to 'Detalhes', place, class: 'btn btn-info btn-small' %>
            <%= link_to 'Editar', edit_place_path(place), class: 'btn btn-primary btn-small'  %>
            <%= link_to 'Excluir', place, method: :delete, data: { confirm: 'Você tem certeza que deseja deletar esse Tipo de Sala?' }, class: 'btn btn-danger btn-small'  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>



<%= link_to 'Nova Sala', new_place_path, class:"btn btn-success" %>

