<h1>Detalhes do Objeto</h1>
<%= link_to 'Editar Informações deste Objeto', edit_object_resource_path(@object_resource), class:"btn-small btn-primary"%> 

<hr>


<dl>
  <dt>Nome:</dt> <dd><%= @object_resource.name %></dd>
  <dt>Descrição:</dt> <dd><%= @object_resource.description %></dd>
</dl>

<hr>

<h2>Salas que possuem este Objeto</h2>

<table class="table table-striped table-bordered table-hover places_table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Tipo de Sala</th>
      <th>Setor</th>
      <th>Capacidade</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>

  <% unless @object_resource.places.count == 0 %> 
    <% @object_resource.places.each do |place| %>
      <%= render place %>
    <%end%>
  <% else %>
    <tr>
      <th colspan="6">Nenhuma sala possui este recurso.</th>
    </tr>
  <% end %>

  </tbody>
  
</table>


<%= render 'shared/back'%>