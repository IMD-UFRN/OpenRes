<h1>Detalhes do Tipo de Sala</h1>
<%= link_to 'Editar Informações deste Tipo de Sala', edit_room_type_path(@room_type), class:"btn-small btn-normal"%> 


<hr>


<dl>
  <dt>Nome:</dt> <dd><%= @room_type.name %></dd>
  <dt>Descrição:</dt> <dd><%= @room_type.description %></dd>
</dl>

<hr>

<h2>Salas deste tipo</h2>

<table class="table table-striped table-bordered table-hover places_table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Tipo de Sala</th>
      <th>Setor</th>
      <th>Capacidade</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>

  <% @room_type.places.each do |place| %>
    <%= render place %>
  <%end%>

  </tbody>
</table>


<%= render 'shared/back'%>