<h1>Listando Tipos de Sala</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @room_types.each do |room_type| %>
      <tr>
        <td><%=room_type.name%></td>
        <td><%=room_type.description%></td>
        <td><%= link_to 'Detalhes', room_type %></td>
        <td><%= link_to 'Excluir', room_type, method: :delete, data: { confirm: 'Você tem certeza que deseja deletar esse Tipo de Sala?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo de Sala', new_room_type_path, class:"btn btn-success" %>
