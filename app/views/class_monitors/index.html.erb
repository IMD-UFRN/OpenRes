    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Sala</th>
    </tr>
  </thead>

  <tbody>
    <% unless @class_monitors.count == 0 %>
      <% @class_monitors.each do |class_monitor| %>
        <tr>
          <td><%= link_to class_monitor.name, class_monitor %></td>
          <td><%= class_monitor.email %></td>
          <td><%= class_monitor.place.full_name %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <th colspan="6">NÃ£o existem monitores cadastrados.</th>
      </tr>
  <% end %>
  </tbody>
</table>

