<h2>Listando Reservas Múltiplas</h2>

<% unless @reservation_groups.length ==0 %>
  <% @reservation_groups.each do |reservation_group| %>

    <table class = "table table-striped table-bordered table-hover">
      <thead>
        <tr colspan="4">
          <th><big>Título: <%=link_to reservation_group.name, reservation_group%></big></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>Data</th>
          <th>Dia</th>
          <th>Início</th>
          <th>Fim</th>
          <th>Local</th>
          <th>Situação</th>
          <th>Ações</th>
        </tr>
        <% ReservationDecorator.decorate_collection(reservation_group.reservations).each do |reservation|%>
          <tr>
            <td><%= reservation.date %></td>
            <td><%= reservation.week_day %></td>
            <td><%= reservation.begin_time %></td>
            <td><%= reservation.end_time %></td>
            <td><%= reservation.place %></td>
            <td><%= reservation.status %></td>
            <td><%= link_to 'Detalhes', reservation,  class: "btn-small btn-normal" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  <% end %>
<%else%>
  <p>Não existem reservas deste tipo</p>
<% end %>

<%= link_to "Nova Reserva Múltipla", new_reservation_group_path, class:"btn btn-success"%>
