<h3>Todas as Reservas</h3>

<table class = "table table-striped table-bordered table-hover">
  <thead>
    <tr colspan="4">
      <th>Reservas Pendentes</th>
    </tr>
    <tr>
      <th>Início</th>
      <th>Fim</th>
      <th>Local</th>
      <th>Solicitante</th>
      <th>Status</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @open_sector_reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.begin_time %></td>
        <td><%= reservation.end_time %></td>
        <td><%= reservation.place %></td>
        <td><%= reservation.user %></td>
        <td><%= reservation.status %></td>
        <td><%= link_to 'Detalhes', reservation %></td>
        <%= reservation.approve_link %>
        <%= reservation.reject_link %>
        <%= reservation.suspend_link %>
      </tr>
    <% end %>
  </tbody>
</table>


