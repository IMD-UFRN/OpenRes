<table class = "table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Data</th>
      <th>Início</th>
      <th>Fim</th>
      <th>Local</th>
      <th>Solicitante</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.begin_time %></td>
        <td><%= reservation.end_time %></td>
        <td><%= reservation.place %></td>
        <td><%= reservation.user %></td>
        <td><%= reservation.status %></td>
        <td><%= link_to 'Detalhes', reservation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Reserva', new_reservation_path, class:"btn btn-success" %>

<%= link_to 'Reservas Futuras', "/reservations/basic_future_reservations", class:"btn btn-primary" %>
<%= link_to 'Reservas Finalizadas', "/reservations/basic_finished_reservations", class:"btn btn-primary" %>
<%= link_to 'Todas as Reservas', "/reservations/basic_reservations", class:"btn btn-primary" %>