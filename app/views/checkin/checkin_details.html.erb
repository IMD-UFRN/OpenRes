<h2>Reservas aprovadas para hoje, sala <%= @place.code %></h2>

<% if @active %>
  <h4>Em andamento</h4>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Início</th>
        <th>Fim</th>
        <th>Responsável</th>
        <th>Feita por</th>
        <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @active.begin_time %></td>
        <td><%= @active.end_time %></td>
        <td><%= @active.reservation.responsible %></td>
        <td><%= @active.reservation.user %></td>
        <td><%= link_to 'Check-out', checkout_path(@active), method: :post, class: 'btn-normal btn-small' %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<h4>A serem realizadas</h4>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Início</th>
      <th>Fim</th>
      <th>Responsável</th>
      <th>Feita por</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.begin_time %></td>
        <td><%= reservation.end_time %></td>
        <td><%= reservation.responsible %></td>
        <td><%= reservation.user %></td>
        <td><%= link_to 'Check-in', checkin_path(reservation), method: :post, class: 'btn-normal btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4>Realizadas</h4>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Início</th>
      <th>Fim</th>
      <th>Responsável</th>
      <th>Feita por</th>
    </tr>
  </thead>

  <tbody>
    <% @finished.each do |checkin| %>
      <tr>
        <td><%= checkin.begin_time %></td>
        <td><%= checkin.end_time %></td>
        <td><%= checkin.reservation.responsible %></td>
        <td><%= checkin.reservation.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
