<%= simple_form_for(@vehicle) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :plate, label:"Placa" %>
    <%= f.input :car_model, label:"Modelo" %>
    <%= f.input :capacity, label:"Capacidade", as: :integer %>
    <%= f.input :description, label:"Características" %>
    <%= f.input :reservable, label:"Reservável?" %>
  </div>
  <br>

  <%= f.button :submit, "OK", class: "btn btn-success" %>

<% end %>

<hr>
