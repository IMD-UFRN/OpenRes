<%if params[:filter_by] == "future" %>
  <h1>Checando Reservas Múltiplas Futuras</h1>
<% elsif params[:filter_by] == "finished" %>
  <h1>Checando Reservas Múltiplas Finalizadas</h1>
<%else%>
  <h1>Checando Reservas Múltiplas</h1>
<%end%>

<ul class="nav nav-tabs" style="margin-bottom: 20px;">
  <li><%= link_to 'Reservas Futuras', check_group_reservations_path(filter_by: "future") %></li>
  <li><%= link_to 'Reservas Finalizadas', check_group_reservations_path(filter_by: "finished") %></li>
  <li><%= link_to 'Todas as Reservas', check_group_reservations_path %></li>
</ul>

<% unless @reservation_groups.length ==0 %>
  <% @reservation_groups.each do |reservation_group| %>

      <%= render reservation_group %>

  <% end %>

<%else%>
  <p>Não existem reservas deste tipo</p>
<% end %>
<div class="clear">

<%= link_to "Nova Reserva Múltipla", new_reservation_group_path, class:"btn btn-success"%>

<%= render "shared/back"%>


<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
